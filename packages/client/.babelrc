{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": "> 0.25%, not dead",
                "useBuiltIns": "usage",
                "corejs": 3
            }
        ],
        "@babel/preset-typescript",
        "@babel/preset-react"
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "root": [
                    "./"
                ],
                "cwd": "babelrc",
                "alias": {
                    "^components/(.+)": "./components/\\1",
                    "^styles/(.+)": "./styles/\\1"
                }
            }
        ]
    ],
    "env": {
        "development": {
            "plugins": [
                "react-hot-loader/babel"
            ]
        },
        "production": {
            "plugins": [
                ["babel-plugin-transform-react-remove-prop-types", { "removeImport": true }],
                "emotion"
            ]
        }
    }
}
