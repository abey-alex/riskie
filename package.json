{
  "name": "@riskie/server",
  "version": "1.0.0",
  "private": true,
  "description": "Fraud detection",
  "homepage": "https://github.com/abey-alex/riskie#readme",
  "bugs": {
    "url": "https://github.com/abey-alex/riskie/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abey-alex/riskie.git"
  },
  "license": "ISC",
  "author": "Abey Alex",
  "main": "index.ts",
  "scripts": {
    "build": "run-s clean build:server",
    "build:server": "webpack-cli",
    "clean": "rm -rf dist coverage test-report.xml",
    "dev": "nodemon",
    "lint": "tslint '{helpers|routes|services|types|views}/**/*.ts'",
    "prettier": "prettier --write '**/*.ts'",
    "setup:env": "cp .env.example .env",
    "start": "npm --production=false ci && run-s setup:env build start:server",
    "start:server": "node dist/index.js",
    "test": "run-s clean test:jest",
    "test:jest": "jest --config jest.config.js --no-cache --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "dependencies": {
    "@graphql-modules/core": "^0.7.14",
    "apollo-server-express": "^2.14.2",
    "bunyan": "^1.8.12",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql-tag": "^2.10.3",
    "helmet": "^3.21.2",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.2",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "tslint": "^6.0.0",
    "typescript": "^3.8.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "webpackbar": "^4.0.0"
  },
  "engines": {
    "node": ">=10.0.0",
    "yarn": "^1.6.0"
  }
